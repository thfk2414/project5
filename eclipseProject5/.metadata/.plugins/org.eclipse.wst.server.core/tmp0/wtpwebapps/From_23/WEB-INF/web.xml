<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>From_23</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<!-- 1. 로그인 및 회원가입 -->
	<servlet>
		<servlet-name>MemberFrontController</servlet-name>
		<servlet-class>com.javalec.frontcontroller.MemberFrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberFrontController</servlet-name>
		<url-pattern>*.member</url-pattern>
	</servlet-mapping>
	
	<!-- 2. 찾기 -->
	<servlet>
		<servlet-name>SearchFrontController</servlet-name>
		<servlet-class>com.javalec.frontcontroller.SearchFrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SearchFrontController</servlet-name>
		<url-pattern>*.search</url-pattern>
	</servlet-mapping>
	
	<!-- 3. 이비가소식-오픈점소식 -->
	<servlet>
		<servlet-name>OpenFrontController</servlet-name>
		<servlet-class>com.javalec.frontcontroller.OpenFrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>OpenFrontController</servlet-name>
		<url-pattern>*.open</url-pattern>
	</servlet-mapping>
	
	<!-- 4. 이비가소식-공지사항 -->
	<servlet>
		<servlet-name>NoticeFrontController</servlet-name>
		<servlet-class>com.javalec.frontcontroller.NoticeFrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NoticeFrontController</servlet-name>
		<url-pattern>*.notice</url-pattern>
	</servlet-mapping>
	
	<!-- 5. 이비가소식-고객의소리 -->
	<servlet>
		<servlet-name>CustomerFrontController</servlet-name>
		<servlet-class>com.javalec.frontcontroller.CustomerFrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CustomerFrontController</servlet-name>
		<url-pattern>*.customer</url-pattern>
	</servlet-mapping>
	
	<!-- 6. 관리자  -->
	<servlet>
		<servlet-name>AdminFrontController</servlet-name>
		<servlet-class>com.javalec.frontcontroller.AdminFrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminFrontController</servlet-name>
		<url-pattern>*.admin</url-pattern>
	</servlet-mapping>
	
	<!-- 자원을 참조하겠다 -->
	<resource-ref>
		<description>Connection</description>
		<res-ref-name>jdbc/OracleDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>